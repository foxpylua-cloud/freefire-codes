const fs = require("fs");

let codes = [];

// 🏟️ فرق مشهورة
const teams = [
  "ريال مدريد", "برشلونة", "مانشستر يونايتد", "مانشستر سيتي",
  "ليفربول", "تشيلسي", "أرسنال", "يوفنتوس", "ميلان", "إنتر ميلان",
  "أتلتيكو مدريد", "بايرن ميونخ", "باريس سان جيرمان", "الأهلي", "الزمالك",
  "بيراميدز", "النصر", "الهلال"
];
teams.forEach(team => {
  codes.push({ title: `⚽ ${team}`, text: `⚽ ${team.toUpperCase()} ⚽` });
});

// 🔫 أسلحة
const weapons = ["AK-47", "MP40", "M4A1", "SCAR", "AWM", "M1014", "M82B"];
weapons.forEach(weapon => {
  for (let i = 1; i <= 50; i++) {
    codes.push({ title: `🔫 ${weapon} ${i}`, text: `🔫 ${weapon} MASTER ${i} 🔫` });
  }
});

// 🌍 أعلام
const flags = ["🇪🇬","🇸🇦","🇦🇪","🇫🇷","🇩🇪","🇮🇹","🇪🇸","🇬🇧","🇧🇷","🇦🇷"];
flags.forEach(flag => {
  for (let i = 1; i <= 30; i++) {
    codes.push({ title: `علم ${flag} ${i}`, text: `${flag} PLAYER ${i} ${flag}` });
  }
});

// 🤣 ضحك وعبارات
const fun = ["خليك فري", "اضحك", "ملوك اللعبة", "الوحش وصل", "خليك جدع"];
fun.forEach(f => {
  for (let i = 1; i <= 40; i++) {
    codes.push({ title: `🤣 ${f} ${i}`, text: `🤣 ${f} ${i} 🔥` });
  }
});

// حفظ إلى JSON
fs.writeFileSync("codes.json", JSON.stringify(codes, null, 2));
console.log(`✅ تم إنشاء ${codes.length} كود في ملف codes.json`);
